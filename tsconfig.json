{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 18",
    "preset": "ts-jest",
    "testEnvironment": "node",
    "_version": "2.0.0",
  
    "compilerOptions": {
      "lib": ["es2023"],
      "module": "Node16",
      "target": "es2022",
      "outDir": "./build", 
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    }
  }
    