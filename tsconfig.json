{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Node 18",
    "preset": "ts-jest",
    "testEnvironment": "node",
    "_version": "2.0.0",
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
          "@root/*":["/*"],
          "@features/*": ["features/*"],
          "@lib/*": ["lib/*"],
          "@conf/*": ["config/*"],
          "@cache/*": ["lib/services/cache/*"],
          "@validation/*": ["validation/*"],
          "@utils/*": ["lib/utils/*"]
        },

      "lib": ["es2022"],
      "module": "Node16",
      "target": "es2022",
      "outDir": "./build", 
      "strict": false,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "skipLibCheck": false,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "forceConsistentCasingInFileNames": true
    }
  }